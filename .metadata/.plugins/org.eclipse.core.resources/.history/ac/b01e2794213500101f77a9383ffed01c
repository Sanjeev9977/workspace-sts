spring.application.name=01-JPA_Mltiple_Con_DB_App-7

# DB1 - H2 in-memory
spring.datasource.db1.jdbcUrl=jdbc:h2:mem:springdb;DB_CLOSE_DELAY=-1
spring.datasource.db1.driver-class-name=org.h2.Driver
spring.datasource.db1.username=san
spring.datasource.db1.password=root123

# DB2 - MySQL
spring.datasource.db2.jdbcUrl=jdbc:mysql://localhost:3306/db2
spring.datasource.db2.username=root
spring.datasource.db2.password=user@123
spring.datasource.db2.driver-class-name=com.mysql.cj.jdbc.Driver

# JPA settings (apply globally unless overridden)
spring.jpa.show-sql=true
spring.jpa.hibernate.ddl-auto=update
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.H2Dialect






 
